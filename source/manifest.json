{
  "name": "Quipu",
  "version": "0.0.1",
  "description": "A tab session manager powered by pinboard",
  "homepage_url": "https://github.com/janrito/quipu",
  "manifest_version": 2,
  "minimum_chrome_version": "74",
  "applications": {
    "gecko": {
      "id": "alejandro@giacometti.me",
      "strict_min_version": "67.0"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["storage", "tabs", "*://api.pinboard.in/*"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
