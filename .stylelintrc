{
  "plugins": ["stylelint-prettier"],
  "extends": ["stylelint-config-standard", "stylelint-prettier/recommended"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "apply",
          "screen",
          "theme",
          "config",
          "utility",
          "custom-variant"
        ]
      }
    ],
    "font-weight-notation": "numeric",
    "import-notation": "string"
  }
}
