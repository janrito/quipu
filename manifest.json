{
  "name": "Quipu",
  "version": "0.2.0",
  "description": "Quipu is a simple Pinboard powered session manager.",
  "homepage_url": "https://github.com/janrito/quipu",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "{{firefox}}.applications": {
    "gecko": {
      "id": "alejandro@giacometti.me",
      "strict_min_version": "67.0"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["storage", "tabs", "*://api.pinboard.in/*"],
  "{{chrome}}.host_permissions": ["storage", "tabs", "*://api.pinboard.in/*"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "{{firefox}}.persistent": false,
    "{{firefox}}.scripts": ["source/background.js"],
    "{{chrome}}.service_worker": "source/background.js"
  }
}
