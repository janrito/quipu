{
  "name": "quipu",
  "version": "0.2.0",
  "description": "Quipu is a simple Pinboard powered session manager.",
  "homepage_url": "https://github.com/janrito/quipu",
  "private": true,
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "run-p lint:*",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint:css": "stylelint src/**/*.css src/**/*.pcss",
    "lint:js": "eslint --fix .",
    "lint:prettier": "prettier --check .",
    "test": "run-p lint check",
    "postinstall": "wxt prepare"
  },
  "browserslist": [
    "last 2 Chrome version",
    "last 2 Firefox version"
  ],
  "devDependencies": {
    "@fontsource/iosevka": "^5.2.5",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/postcss": "^4.0.6",
    "@tailwindcss/vite": "^4.0.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/lodash": "^4.17.15",
    "@types/webextension-polyfill": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@webext-core/messaging": "^2.2.0",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-svelte": "^2.0.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.15.0",
    "lodash": "^4.17.21",
    "lz-string": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.2",
    "postcss-custom-properties": "^14.0.4",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "postcss-url": "^10.1.3",
    "prettier": "^3.5.1",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.3",
    "svelte": "^5.20.4",
    "svelte-check": "^4.1.4",
    "svelte-dnd-action": "^0.9.57",
    "tailwindcss": "^4.0.6",
    "typescript-eslint": "^8.24.0",
    "urlpattern-polyfill": "^10.0.0",
    "webextension-polyfill": "^0.12.0",
    "wxt": "^0.19.27"
  },
  "webExt": {
    "sourceDir": "dist"
  },
  "type": "module"
}
